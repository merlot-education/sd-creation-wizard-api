@prefix gax-trust-framework: <http://w3id.org/gaia-x/gax-trust-framework#> .
@prefix gax-validation: <http://w3id.org/gaia-x/validation#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

gax-validation:ContainerImageShape a sh:NodeShape ;
    sh:property [ skos:example "'linux', 'windows'" ;
            sh:datatype xsd:string ;
            sh:description "Betriebssystem der Containerbildbasis"@de,
                "container image base operating system"@en ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:name "base o s" ;
            sh:order 1 ;
            sh:path gax-trust-framework:baseOS ],
        [ skos:example "'docker v1', 'docker v2', 'oci', 'lxc'" ;
            sh:datatype xsd:string ;
            sh:description "Containerbildformat"@de,
                "container image format"@en ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:name "format" ;
            sh:order 2 ;
            sh:path gax-trust-framework:format ] ;
    sh:targetClass gax-trust-framework:ContainerImage .

