@prefix gax-trust-framework: <http://w3id.org/gaia-x/gax-trust-framework#> .
@prefix gax-validation: <http://w3id.org/gaia-x/validation#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

gax-validation:ThirdPartyComplianceCertificateClaimShape a sh:NodeShape ;
    sh:property [ skos:example "'https://company-a.com/self-descriptions/cab.jsonld'" ;
            sh:description "ID des Teilnehmers (Selbstbeschreibung), das mit einer Rolle der Compliance-Bewertungsbehörde befürwortet wurde, die die Compliance behauptet"@de,
                "Id of the Participant (self-description) endorsed having a Compliance Assessment Body role that claims the compliance"@en ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:name "has compliance assessment body" ;
            sh:nodeKind sh:IRI ;
            sh:order 1 ;
            sh:path gax-trust-framework:hasComplianceAssessmentBody ],
        [ skos:example "'https://company-a.com/self-descriptions/compliance-cert-scheme-iso27001.jsonld'" ;
            sh:description "ID des Compliance-Zertifizierungsschemas (Selbstbeschreibung), das an der Zertifizierung beteiligt ist"@de,
                "ID of the Compliance Certification Scheme (self-description) involved in the certification"@en ;
            sh:maxCount 1 ;
            sh:name "has compliance certification scheme" ;
            sh:nodeKind sh:IRI ;
            sh:order 1 ;
            sh:path gax-trust-framework:hasComplianceCertificationScheme ],
        [ skos:example "'https://company-a.com/self-descriptions/service-offering-iaas.jsonld'" ;
            sh:description "ID des Dienstangebots (Selbstbeschreibung) für die Einhaltung"@de,
                "ID of the Service Offering (self-description) certified for the compliance"@en ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:name "has service offering" ;
            sh:nodeKind sh:IRI ;
            sh:order 2 ;
            sh:path gax-trust-framework:hasServiceOffering ] ;
    sh:targetClass gax-trust-framework:ThirdPartyComplianceCertificateClaim .

