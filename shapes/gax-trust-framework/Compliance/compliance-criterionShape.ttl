@prefix dct: <http://purl.org/dc/terms/> .
@prefix gax-trust-framework: <http://w3id.org/gaia-x/gax-trust-framework#> .
@prefix gax-validation: <http://w3id.org/gaia-x/validation#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

gax-validation:ComplianceCriterionShape a sh:NodeShape ;
    sh:property [ skos:example "'Gaia-X C1/L1'" ;
            sh:datatype xsd:string ;
            sh:description "Name des Gaia-X-Kriteriums"@de,
                "Name of the Gaia-X Criterion"@en ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:name "has name" ;
            sh:order 1 ;
            sh:path gax-trust-framework:hasName ],
        [ skos:example "'Gaia-X'" ;
            sh:datatype xsd:string ;
            sh:description "Eine Beschreibung in der natürlichen Sprache des Gaia-X-Kriteriums, wie im TF-Dokument definiert"@de,
                "A description in natural language of the Gaia-X Criterion as defined in TF document"@en ;
            sh:maxCount 1 ;
            sh:name "has description" ;
            sh:order 2 ;
            sh:path dct:hasDescription ],
        [ skos:example "'1', '2', '3'" ;
            sh:datatype xsd:string ;
            sh:description "Eine Beschreibung in der natürlichen Sprache der Labelebene.Die Ebene der Ebene erfolgt durch alphanumerische Reihenfolge."@de,
                "A description in natural language of the Label level. The level ordering is done by alphanumeric order."@en ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:name "has level" ;
            sh:order 3 ;
            sh:path gax-trust-framework:hasLevel ] ;
    sh:targetClass gax-trust-framework:ComplianceCriterion .

