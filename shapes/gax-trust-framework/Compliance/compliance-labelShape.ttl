@prefix dct: <http://purl.org/dc/terms/> .
@prefix gax-trust-framework: <http://w3id.org/gaia-x/gax-trust-framework#> .
@prefix gax-validation: <http://w3id.org/gaia-x/validation#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

gax-validation:ComplianceLabelShape a sh:NodeShape ;
    sh:property [ skos:example "'Gaia-X GDPR Trusted Label'" ;
            sh:datatype xsd:string ;
            sh:description "Name des Gaia-X-Etiketts"@de,
                "Name of the Gaia-X Label"@en ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:name "has name" ;
            sh:order 1 ;
            sh:path gax-trust-framework:hasName ],
        [ skos:example "'Gaia-X'" ;
            sh:datatype xsd:string ;
            sh:description "Eine Beschreibung in der natürlichen Sprache des Gaia-X-Etiketts gemäß TF-Dokument definiert"@de,
                "A description in natural language of the Gaia-X Label as defined in TF document"@en ;
            sh:maxCount 1 ;
            sh:name "has description" ;
            sh:order 2 ;
            sh:path dct:hasDescription ],
        [ skos:example "'1', '2', '3'" ;
            sh:datatype xsd:string ;
            sh:description "Eine Beschreibung in der natürlichen Sprache der Gaia-X-Etikettenebene, wie im TF-Dokument definiert"@de,
                "A description in natural language of the Gaia-X Label Level as defined in TF document"@en ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:name "has level" ;
            sh:order 3 ;
            sh:path gax-trust-framework:hasLevel ],
        [ skos:example "'1', '2', '3'" ;
            sh:description "Liste der Kriterienkombinationen.Wenn eine dieser Kombinationen gültig ist, wird das Etikett gewährt"@de,
                "List of Criteria Combinations. If one of these Combinations is valid the Label is Granted"@en ;
            sh:minCount 1 ;
            sh:name "has required criteria combinations" ;
            sh:nodeKind sh:IRI ;
            sh:order 4 ;
            sh:path gax-trust-framework:hasRequiredCriteriaCombinations ] ;
    sh:targetClass gax-trust-framework:ComplianceLabel .

