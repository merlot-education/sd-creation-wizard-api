@prefix gax-trust-framework: <http://w3id.org/gaia-x/gax-trust-framework#> .
@prefix gax-validation: <http://w3id.org/gaia-x/validation#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

gax-validation:LocationShape a sh:NodeShape ;
    sh:property [ skos:example "'did:web:example.com/location/sha256'" ;
            sh:description "ID des Teilnehmers, der die Standorteinheit betreibt, die das Serviceangebot implementiert"@de,
                "Id of the participant who operates the Location Unit that implements the Service Offering"@en ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:name "has provider" ;
            sh:nodeKind sh:IRI ;
            sh:order 1 ;
            sh:path gax-trust-framework:hasProvider ],
        [ skos:example "'did:web:example.com/serviceOffering/sha256-1', 'did:web:example.com/serviceOffering/sha256-2'" ;
            sh:description "Liste der Referenzen des Serviceangebots, die an diesem Ort gehostet werden können"@de,
                "List of references of Service Offering that may be hosted on this location"@en ;
            sh:minCount 1 ;
            sh:name "can host service offering" ;
            sh:nodeKind sh:IRI ;
            sh:order 2 ;
            sh:path gax-trust-framework:canHostServiceOffering ],
        [ skos:example "'FR-39', 'DE-BE'" ;
            sh:datatype xsd:string ;
            sh:description "ISO 3166-2 5 Ziffernzeichen für den Standort"@de,
                "ISO 3166-2 5 digit string for location"@en ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:name "has administrative location" ;
            sh:order 3 ;
            sh:path gax-trust-framework:hasAdministrativeLocation ],
        [ skos:example "'did:web:example.com/locatedServiceOffering/sha256'" ;
            sh:description "IDS der lokalisierten Serviceangebote an diesem Ort"@de,
                "Ids of Located Service Offerings on this location"@en ;
            sh:minCount 1 ;
            sh:name "has located service offering" ;
            sh:nodeKind sh:IRI ;
            sh:order 4 ;
            sh:path gax-trust-framework:hasLocatedServiceOffering ] ;
    sh:targetClass gax-trust-framework:Location .

